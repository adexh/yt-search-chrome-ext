{
  "manifest_version": 3,
  "name": "Inline search buttons",
  "version": "1.0",
  "description": "Adds clickable icons at the end of selected text.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },  
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}